<configuration>
    <system.webServer>

        <!-- indicates that the app.js file is a node.js application
        to be handled by the iisnode module -->

        <handlers>
            <add name="iisnode" path="app.js" verb="*" modules="iisnode" />
        </handlers>

        <rewrite>
            <rules>
                <rule name="sendToNode">
                    <match url="/*" />
                    <action type="Rewrite" url="app.js" />
                </rule>
            </rules>
        </rewrite>

    </system.webServer>
</configuration>